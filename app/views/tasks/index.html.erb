<div class="container mt-5">
  <div class="row justify-content-center">
    <h1>My Tasks</h1>
    <ul class="list-unstyled w-100">
      <% @tasks.each do |task| %>
        <li class="mb-2">
          <%= form_for(task, html: { class: 'task-form d-flex align-items-center' }) do |f| %>
            <%= f.check_box :completed, class: 'mr-2' %>
            <%= link_to task.title, task_path(task), class: 'flex-grow-1' %>
            <%= f.submit 'Update', class: 'btn btn-primary ml-2', style: 'width: 100px;' %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'Add a task', new_task_path, class: 'btn btn-primary w-50 mt-3' %>
  </div>
</div>
